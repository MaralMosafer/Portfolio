@model PortfolioManagement.Application.Contracts.WorkSample.EditWorkSample


<div class="modal-header">
    <h5 class="modal-title" id="EditModalLabel">Edit @Model.Name</h5>
    <button type="button" class="close ml-1" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">


    <div class="modal-body">

        <div class="form-floating mb-3">
            <input type="text" name="Name" class="form-control" id="floatingInput" required asp-for="Name">
            <label for="floatingInput">Name</label>
        </div>

        <select class="form-select form-select-sm mb-3" name="CategoryId" aria-label=".form-select-sm example" asp-items='new SelectList(Model.Categories, "Id", "Name")' asp-for="CategoryId">
            <option value="0" selected="">Select Category...</option>
        </select>

        <div class="mb-3">
            <label for="formFile" name="Picture" class="form-label">Picture</label>
            <input type="file" name="Picture" class="form-control form-control-sm bg-dark" id="formFileSm" accept="image/*" value="@Model.Picture" asp-for="Picture">
        </div>

        <div class="form-floating mb-3">
            <input type="text" name="PictureAlt" class="form-control" id="floatingInput" required asp-for="PictureAlt">
            <label for="floatingInput">PictureAlt</label>
        </div>

        <div class="form-floating mb-3">
            <input type="text" name="PictureTitle" class="form-control" id="floatingInput" required asp-for="PictureTitle">
            <label for="floatingInput">PictureTitle</label>
        </div>

    </div>

    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="modal-footer">
        <button type="button" class="btn btn-danger ml-2" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </div>
</form>





