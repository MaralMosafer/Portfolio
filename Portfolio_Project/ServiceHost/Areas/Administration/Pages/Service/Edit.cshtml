@model PortfolioManagement.Application.Contracts.Service.EditService


<div class="modal-header">
    <h5 class="modal-title" id="EditModalLabel">Edit @Model.Title</h5>
    <button type="button" class="close ml-1" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">


    <div class="modal-body">

        <div class="form-floating mb-3">
            <input type="tel" name="Title" class="form-control" id="floatingInput" required asp-for="Title">
            <label for="floatingInput">Title</label>
        </div>

        <div class="form-floating mb-3">
            <input type="text" name="Description" class="form-control" id="floatingInput" required asp-for="Description">
            <label for="floatingInput">Description</label>
        </div>

        <div class="form-floating mb-3">
            <input type="number" name="Price" class="form-control" id="floatingInput" required asp-for="Price">
            <label for="floatingInput">Price</label>
        </div>
    </div>

    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="modal-footer">
        <button type="button" class="btn btn-danger ml-2" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </div>
</form>





